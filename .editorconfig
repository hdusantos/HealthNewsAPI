insert_final_newline = true

[*.{js,ts}]
trim_trailing_whitespace = true
charset = utf-8

[*.ts]
indent_style = space
indent_size = 2

[{package.json,.docker-compose.yml}]
indent_style = space
indent_size = 2

[{tsconfig.json,tslint.json}]
indent_style = space
indent_size = 4

